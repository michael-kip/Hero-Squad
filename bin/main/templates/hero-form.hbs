{{#partial "content"}}
    <div class ="container">
        <form class="form-group" action="/heroes" method= post>
            <h3>Create Heroes:</h3>
            <div>
                <div class="form-floating mt-2">
                    <input type="text" id="name" name="name" class="form-control" placeholder="hero's name" required>
                    <label for="name">Hero name</label>
                </div>
                <div class="form-floating mt-2">
                    <input type="text" id="age" name="age" class="form-control" placeholder="hero's age" required>
                    <label for="name">Hero age</label>
                </div>
                <div class="form-floating mt-2">
                    <input type="text" id="power" name="power" class="form-control" placeholder="superpower" required>
                    <label for="name">Super Power</label>
                </div>
                <div class="form-floating mt-2">
                    <input type="text" id="weakness" name="weakness" class="form-control" placeholder="weakness" required>
                    <label for="name">Weakness</label>
                </div>
            </div>
            <div class="input-group mt-2">
                <div class="input-group-prepend">
                    <label for="squadId" class="input-group-text"> Squad: </label>
                </div>
                <select class="custom-select" id="squadId" name="squadId" required>
                    {{#each squads}}
                        <option value="{{id}}">{{name}}</option>
                    {{/each}}
                </select>
            </div>
            <button type="submit" class="btn btn-outline-dark btn-lg mt-4">Add Hero</button>
        </form>
    </div>

{{/partial}}

{{> layout.hbs}}