{{#partial "content"}}
    <div class="card">
    {{#if squads}}
        {{#each squads}}
            <div class="card col-lg-8">
                <h3 class="text-center card-title" id="squad"> Squad Name:{{name}}</h3>
                <a href="/squads/{{id}}" class="btn btn-outline-dark btn-lg col-md-4">View info</a>
            </div>

        {{/each}}
    {{else}}
        <div class="card col-md-12">
            <p id="hero" style="font-size:32px" class="card-text">You have no squads!</p>
        </div>
        <br><br>
    {{/if}}
        <div class="card"><a href="/squads/new" class="btn btn-outline-light btn-lg mt-4">Add squads</a></div>
    </div>

{{/partial}}

{{> layout.hbs}}