
{{#partial "title"}}
    Squads!
{{/partial}}

{{#partial "content"}}
    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link text-light" href="/">Home <span class="sr-only">heroes</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light" href="/squads/new"> squad</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light" href="/heroes/new">hero</a>
                </li>
            </ul>
        </div>
    </nav>
    {{#if squads}}
        {{#each squads}}
            <div class="card col-lg-9">
                <h1 class="text-center card-title" id="squad"> Squad name:{{name}}</h1>
                <a href="/squadit/{{id}}" class="btn btn-outline-danger btn-lg col-md-6">View info</a>
            </div>

        {{/each}}
    {{else}}
        <div class="card col-md-12">
            <img src="/images/source.gif" class="card-img-top">
            <p id="hero" style="font-size:32px" class="card-text">You have no squads!</p>
        </div>
        <br><br>
    {{/if}}
    <a href="/squads/new" class="btn btn-outline-primary btn-lg">Create squads</a>
{{/partial}}

{{> layout.hbs}}