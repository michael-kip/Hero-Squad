{{#partial "content"}}
        <div class="card">
            <h2>Add a new SQUAD!</h2>

            <form action="/squad/new" method="post" class="form-group form">
                <div class="mb-3">
                    <label for="name">Squad name</label>
                    <input class="form-control" id="name" name="name" type="text" required>
                </div>

                <div class="mb-3">
                    <label for="cause">Mission</label>
                    <input class="form-control" id="cause" name="cause" type="text" placeholder="eg. save earth" required>
                </div>

                <div class="mb-3">
                    <label for="size">Max Members</label>
                    <input class="form-control" id="size" name="size" type="number" required>
                </div>
                <button type="submit" class="btn btn-secondary">     Go!    </button>
            </form>
        </div>

{{/partial}}

{{> layout.hbs}}